    "@stripe/stripe-js": "^7.9.0",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fabric": "^6.5.4",
    "next": "^16.1.6",
    "next-sitemap": "^4.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
