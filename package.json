    "gh-pages": "^6.3.0",
    "postcss": "^8.5.1",
    "react-snap": "^1.23.0",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "npm run copy-products-json && node scripts/build-without-api.js",
    "build:next": "next build",
    "copy-products-json": "node -e \"const fs = require('fs'); const path = require('path'); const src = 'src/data/products.json'; const dest1 = 'netlify/functions/products.json'; const dest2 = 'netlify/functions/data/products.json'; fs.mkdirSync(path.dirname(dest2), { recursive: true }); fs.copyFileSync(src, dest1); fs.copyFileSync(src, dest2);\"",
    "start": "next start",
    "preview": "next build && next start",
    "server": "node server.js",
    "dev:full": "concurrently \"npm run dev\"  \"npm run server\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d out",
    "push": "npm run deploy",
      "postbuild": "next-sitemap"
  },
  "reactSnap": {
    "port": 48763,
    "include": [
      "/",
      "/CreateYours",
      "/DesignIdeas",
      "/PassportCases/Economy",
      "/PassportCases/FirstClass",
      "/PassportCases/BusinessClass",
      "/Charms/Colorful",
      "/Charms/Bronze",
      "/Flags",
      "/ColorfulCharms",
      "/BronzeCharms",
      "/about",
      "/returns",
      "/shipping"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
